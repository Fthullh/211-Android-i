<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis"
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/jenisEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Isi jenis batu "
        android:inputType="textPersonName"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warna"
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
    />

    <EditText
        android:id="@+id/warnaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Isi warna batu "
        android:inputType="text"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ukuran"
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"

        />

    <EditText
        android:id="@+id/ukuranEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Isi ukuran batu"
        android:inputType="text"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berat"
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/beratEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Isi berat batu"
        android:inputType="text"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harga"
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/hargaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Isi harga batu"
        android:inputType="number"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
        android:id="@+id/simpanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:backgroundTint="@color/teal_700"
        android:drawableLeft="@drawable/ic_baseline_save_24"
        android:layout_marginEnd="10dp"
        />

        <Button
        android:id="@+id/batalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batal"
        android:backgroundTint="@color/danger"
        android:drawableLeft="@drawable/ic_baseline_cancel_24"
        />

    </LinearLayout>

</LinearLayout>